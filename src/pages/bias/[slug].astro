---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../lib/translations';
import biases from '../../data/biases.json';

const lang = Astro.url.pathname.startsWith('/fr') ? 'fr' : 'en';
const { slug } = Astro.params;

const bias = biases.find(b => b.slug === slug);

if (!bias) {
  return Astro.redirect('/biases');
}
---

<Layout title={lang === 'fr' ? bias.nameFr : bias.name} lang={lang}>
  <div class="px-4 py-6">
    <a href="/biases" class="inline-flex items-center text-sm text-gray-500 hover:text-primary-600 mb-4">
      â† {t('common.back')}
    </a>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="text-3xl text-primary-500">
          {bias.icon === 'search' && 'ğŸ”'}
          {bias.icon === 'anchor' && 'âš“'}
          {bias.icon === 'coins' && 'ğŸ’°'}
          {bias.icon === 'sparkles' && 'âœ¨'}
          {bias.icon === 'brain' && 'ğŸ§ '}
        </div>
        <h1 class="text-2xl font-bold text-gray-900">
          {lang === 'fr' ? bias.nameFr : bias.name}
        </h1>
      </div>

      <div class="mb-6">
        <p class="text-lg text-gray-700">
          {lang === 'fr' ? bias.summaryFr : bias.summary}
        </p>
      </div>

      <div class="space-y-6">
        <div>
          <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">
            {t('bias.description', lang)}
          </h2>
          <p class="text-gray-700 leading-relaxed">
            {lang === 'fr' ? bias.descriptionFr : bias.description}
          </p>
        </div>

        <div>
          <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">
            {t('bias.example', lang)}
